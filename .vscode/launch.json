{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "C#: <project-name> Debug",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}/<relative-path-to-project-folder><project-name>.csproj"
    },
        {
            "name": "Debug GamepadKeyMapper (Default)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\GamepadKeyMapper\\bin\\Debug\\net8.0\\GamepadKeyMapper.dll",
            "args": [],
            "cwd": "${workspaceFolder}\\GamepadKeyMapper",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Debug with Custom Config",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\GamepadKeyMapper\\bin\\Debug\\net8.0\\GamepadKeyMapper.dll",
            "args": ["--config", "custom_config.json", "--profile", "vscode_debugging"],
            "cwd": "${workspaceFolder}\\GamepadKeyMapper",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "List Profiles",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\GamepadKeyMapper\\bin\\Debug\\net8.0\\GamepadKeyMapper.dll",
            "args": ["--list"],
            "cwd": "${workspaceFolder}\\GamepadKeyMapper",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Debug with Verbose Output",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\GamepadKeyMapper\\bin\\Debug\\net8.0\\GamepadKeyMapper.dll",
            "args": ["--verbose"],
            "cwd": "${workspaceFolder}\\GamepadKeyMapper",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}